<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Widget.RSW.NotImplementedView" parent="android:Widget">
    <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
    <item name="messageTextAppearance">?attr/textAppearanceBody2</item>
  </style>

  <style name="Widget.RSW.BottomSheet.Dark" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/rsw_bottomsheet_bg_dark</item>
  </style>

  <style name="Widget.RSW.BottomSheet.Light" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/rsw_bottomsheet_bg_light</item>
  </style>

  <style name="Widget.RSW.CardView" parent="Widget.MaterialComponents.CardView" />

  <style name="Widget.RSW.CardView.ColorPicker">
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RSW.CardView.ColorPicker</item>
  </style>

  <style name="Widget.RSW.NativeAlert.Title" parent="Base.DialogWindowTitle.AppCompat">
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
  </style>

  <style name="Widget.RSW.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

  <style name="Widget.RSW.AppBarLayout.AsBackground">
    <item name="android:background">?attr/rsw_background0</item>
  </style>

  <style name="Widget.RSW.AppBarLayout.Flat">
    <item name="android:elevation">0dp</item>
    <item name="elevation">0dp</item>
  </style>

  <style name="Widget.RSW.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="itemIconTint">?attr/rsw_itemIconTint</item>
    <item name="itemTextAppearanceActive">@style/TextAppearance.RSW.Caption.Dp.Brand</item>
    <item name="itemTextAppearanceInactive">@style/TextAppearance.RSW.Caption.Dp.Secondary</item>
    <item name="itemTextColor">?attr/itemTextColor</item>
  </style>

  <style name="Widget.RSW.BottomNavigation.Secondary">
    <item name="android:background">?attr/rsw_background0</item>
  </style>

  <style name="Widget.RSW.SearchBar" parent="android:Widget">
    <item name="android:minHeight">@dimen/rsw_search_bar_height</item>
    <item name="android:outlineAmbientShadowColor">@android:color/transparent</item>
    <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
    <item name="android:textAppearance">@style/TextAppearance.RSW.SearchBar</item>
    <item name="android:theme">@style/ThemeOverlay.RSW.SearchBar</item>
    <item name="backgroundTint">?attr/colorSurface</item>
    <item name="hideNavigationIcon">false</item>
    <item name="navigationIconTint">?attr/colorControlNormal</item>
    <item name="maxButtonHeight">@dimen/rsw_search_bar_height</item>
    <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RSW.SearchBar</item>
  </style>

  <style name="Widget.RSW.SearchBar.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
    <item name="android:minWidth">@dimen/mtrl_min_touch_target_size</item>
  </style>

  <style name="Widget.RSW.SearchBar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
    <item name="android:minWidth">@dimen/mtrl_min_touch_target_size</item>
  </style>

  <style name="Widget.RSW.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="android:background">?attr/colorSurface</item>
    <item name="android:theme">@style/ThemeOverlay.RSW.Toolbar</item>
  </style>

  <style name="Widget.RSW.Toolbar.NoInset">
    <item name="contentInsetStart">0dp</item>
    <item name="contentInsetStartWithNavigation">0dp</item>
  </style>

  <style name="Widget.RSW.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
    <item name="android:textColorHint">?android:attr/textColorHint</item>
    <item name="boxBackgroundColor">?attr/rsw_textFieldBackground</item>
    <item name="boxStrokeWidth">0dp</item>
    <item name="boxStrokeWidthFocused">0dp</item>
    <item name="hintTextAppearance">@style/TextAppearance.RSW.Caption.Secondary</item>
    <item name="hintTextColor">?attr/rsw_textBrand</item>
    <item name="placeholderTextColor">?android:attr/textColorHint</item>
    <item name="placeholderTextAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    <item name="materialThemeOverlay">@style/ThemeOverlay.RSW.TextInputEditText</item>
    <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RSW.TextInputLayout</item>
  </style>

  <style name="Widget.RSW.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    <item name="android:textColor">?attr/rsw_textColorPrimary</item>
  </style>

  <style name="Widget.RSW.TabLayout" parent="Widget.Design.TabLayout">
    <item name="android:background">?attr/colorSurface</item>
    <item name="tabIndicator">@drawable/rsw_tabs_line_indicator</item>
    <item name="tabIndicatorAnimationMode">elastic</item>
    <item name="tabIndicatorColor">?attr/rsw_colorBrand</item>
    <item name="tabPaddingEnd">0dp</item>
    <item name="tabPaddingStart">0dp</item>
    <item name="tabTextAppearance">@style/TextAppearance.RSW.Tab</item>
    <item name="tabTextColor">@color/rsw_tabs_text_color</item>
    <item name="tabUnboundedRipple">true</item>
  </style>

  <style name="ThemeOverlay.RSW.SearchBar" parent="">
    <item name="actionMenuTextColor">?android:attr/textColorSecondary</item>
    <item name="colorControlNormal">?android:attr/textColorSecondary</item>
    <item name="actionOverflowButtonStyle">@style/Widget.RSW.SearchBar.ActionButton.Overflow</item>
    <item name="toolbarNavigationButtonStyle">@style/Widget.RSW.SearchBar.Button.Navigation</item>
  </style>

  <style name="ThemeOverlay.RSW.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
    <item name="colorSurface">?attr/rsw_textFieldBackground</item>
    <item name="editTextStyle">@style/Widget.RSW.TextInputEditText</item>
  </style>

  <style name="ThemeOverlay.RSW.Toolbar" parent="">
    <item name="actionMenuTextColor">?attr/colorOnSurface</item>
    <item name="colorControlNormal">?attr/rsw_colorBrand</item>
  </style>
</resources>
