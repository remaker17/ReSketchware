<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Theme.RSW.DesignLight" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- RSW attributes -->
    <item name="rsw_background0">@color/rsw_color_black_04</item>
    <item name="rsw_background1">@color/rsw_color_white</item>
    <item name="rsw_background2">@color/rsw_color_gray_0</item>
    <item name="rsw_colorBrand">@color/rsw_color_blue_5</item>
    <item name="rsw_iconBrand">@color/rsw_color_blue_5</item>
    <item name="rsw_iconSecondary">@color/rsw_color_black_alpha32</item>
    <item name="rsw_itemIconTint">@color/rsw_bottom_navigation_icon_tint</item>
    <item name="rsw_textBrand">@color/rsw_color_blue_6</item>
    <item name="rsw_textColorBrand">@color/rsw_text_color_brand</item>
    <item name="rsw_textColorPrimary">@color/rsw_text_color_primary</item>
    <item name="rsw_textColorSecondary">@color/rsw_text_color_secondary</item>
    <item name="rsw_textFieldBackground">@color/rsw_color_white</item>
    <item name="rsw_textPrimary">@color/rsw_color_black</item>
    <item name="rsw_textSecondary">@color/rsw_color_black_alpha55</item>

    <!-- Other attributes -->
    <item name="colorBackgroundFloating">?attr/rsw_background1</item>
    <item name="colorControlActivated">?attr/rsw_colorBrand</item>
    <item name="colorControlHighlight">@color/rsw_color_gray_5</item>
    <!-- <item name="colorControlNormal">@color/rsw_color_black_alpha12</item> -->
    <item name="colorSecondary">@color/rsw_color_orange_5</item>
    <item name="colorOnSecondary">@color/rsw_color_orange_0</item>
    <item name="colorPrimary">?attr/rsw_colorBrand</item>
    <item name="colorPrimaryDark">@color/rsw_color_blue_6</item>
    <item name="colorOnPrimary">@color/rsw_color_blue_0</item>
    <item name="colorSurface">?attr/rsw_background1</item>
    <item name="elevationOverlayEnabled">false</item>

    <!-- Components styles/themes -->
    <item name="alertDialogTheme">@style/Theme.RSW.Dialog.Light.Alert</item>
    <item name="appBarLayoutStyle">@style/Widget.RSW.AppBarLayout</item>
    <item name="bottomNavigationStyle">@style/Widget.RSW.BottomNavigation</item>
    <item name="bottomSheetDialogTheme">@style/Theme.RSW.BottomSheetDialog.Light</item>
    <item name="dialogCornerRadius">@dimen/rsw_corner_radius_g</item>
    <item name="dialogTheme">@style/Theme.RSW.Dialog.Light</item>
    <item name="notImplementedViewStyle">@style/Widget.RSW.NotImplementedView</item>
    <item name="itemTextColor">@color/rsw_text_color_checkable_brand</item>
    <item name="searchBarStyle">@style/Widget.RSW.SearchBar</item>
    <item name="tabStyle">@style/Widget.RSW.TabLayout</item>
    <item name="textInputStyle">@style/Widget.RSW.TextInputLayout</item>
    <item name="toolbarStyle">@style/Widget.RSW.Toolbar</item>

    <!-- System attributes -->
    <item name="android:colorBackground">?attr/rsw_background0</item>
    <item name="android:colorBackgroundFloating">?attr/rsw_background1</item>
    <item name="android:colorEdgeEffect">?attr/rsw_colorBrand</item>
    <item name="android:navigationBarColor">?attr/rsw_background0</item>
    <item name="android:textColorHint">?attr/rsw_textColorSecondary</item>
    <item name="android:textColorLink">?attr/rsw_textColorBrand</item>
    <item name="android:textColorPrimary">?attr/rsw_textColorPrimary</item>
    <item name="android:textColorSecondary">?attr/rsw_textColorSecondary</item>
    <item name="android:windowBackground">?attr/rsw_background0</item>
  </style>

  <style name="Theme.RSW.Light" parent="Theme.RSW.DesignLight" />
  <style name="Theme.RSW.DayNight" parent="Theme.RSW.Light" />

  <style name="Theme.RSW.Dialog.Light" parent="Theme.RSW.Light">
    <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
    <item name="android:windowBackground">@drawable/rsw_dialog_bg_light</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowTitleStyle">@style/Widget.RSW.NativeAlert.Title</item>
    <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
    <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    <item name="android:navigationBarColor">?attr/colorBackgroundFloating</item>
    <item name="android:listDivider">@null</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowSoftInputMode">adjustPan</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowCloseOnTouchOutside">true</item>
    <item name="android:windowElevation">@dimen/abc_floating_window_z</item>

    <item name="rsw_textFieldBackground">@color/rsw_color_black_alpha4</item>
  </style>

  <style name="Theme.RSW.Dialog.Light.Alert" parent="Theme.RSW.Dialog.Light">
    <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    <item name="android:windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
    <item name="android:windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>
    <item name="android:letterSpacing">-0.023333333</item>
  </style>

  <style name="Theme.RSW.BottomSheetDialog.Light" parent="Theme.RSW.Dialog.Light">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
    <item name="bottomSheetStyle">@style/Widget.RSW.BottomSheet.Light</item>
  </style>
</resources>
